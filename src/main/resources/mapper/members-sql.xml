<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="members">

	<insert id="insertMembers" parameterType="memberModel">
       <![CDATA[
           INSERT INTO MEMBERS(m_no,m_email,m_name,m_nickname,m_password,m_phone,m_company,m_fav_area,m_fav_field,m_date)
		VALUES(members_seq.nextval,#{m_email},#{m_name},#{m_nickname},#{m_password},#{m_phone},#{m_company},#{m_fav_area},#{m_fav_field},#{m_date})
        ]]>
	</insert>

	<select id="selectOneMember" parameterType="memberModel" resultType="memberModel">
       <![CDATA[
       		SELECT
               	m_no, m_email, m_name, m_nickname, m_password, m_company, m_phone, m_fav_area,	m_fav_field, m_date
        	 FROM
                members
             WHERE 
             	m_email = #{m_email} 
        ]]>
	</select>

	<select id="selectIdChk" parameterType="string" resultType="memberModel">
		SELECT
			*
		FROM 
			MEMBERS
		WHERE
			M_EMAIL = #{M_EMAIL}
	</select>

</mapper>