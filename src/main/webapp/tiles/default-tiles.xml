<tiles-definitions>
	<definition name=".default" template="/tiles/template/default.jsp">
		<put-attribute name="header" value="/tiles/layout/header.jsp" />
		<put-attribute name="footer" value="/tiles/layout/footer.jsp" />
	</definition>

	<definition name=".mypage" template="/tiles/template/mypage.jsp">
		<put-attribute name="header" value="/tiles/layout/header.jsp" />
